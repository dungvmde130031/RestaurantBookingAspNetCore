@model AppAspNetCore.Models.Role
@{
    ViewData["Title"] = "Confirm to delete the access!";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item">
                <i class="anticon anticon-home m-r-5"></i>Home
            </a>
            <a asp-area="Admin" asp-controller="AdminRoles" asp-action="Index" class="breadcrumb-item">
                Access Lists
            </a>
            <span class="breadcrumb-item active">Confirm to delete the access</span>
        </nav>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Confirm to delete the access</h4>
        <div class="table-responsive">
            <table class="product-info-table m-t-20">
                <tbody>
                <tr>
                    <td>ID</td>
                    <td class="text-dark front-weight-semibold">@Model.RoleId</td>
                </tr>
                <tr>
                    <td>Access Name</td>
                    <td class="font-weight-bold">@Model.RoleName</td>
                </tr>
                <tr>
                    <td>Description</td>
                    <td>@Model.Description</td>
                </tr>
                <tr>
                    <td>Confirm Delete</td>
                    <td>
                    <form asp-action="Delete" asp-route-id="@Model.RoleId">
                        <input type="hidden" asp-for="RoleId">
                        <input type="submit" value="I confirm" class="btn btn-danger">
                    </form>
                    </td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>